<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text.html_safe %>
</p>

<h2> <%= @post.likes.count %> Post Likes</h2>
<%= post_like_button %>

<%= post_report %>

<h2> <%= @post.comments.count %> Comments</h2>
<%= render @post.comments %>

<h2>Add a comment:</h2>
<%= render 'comments/form', object: @post, type: 'Post', parent_id: nil, path_type: @post.comments.build %>

<% if current_user.id == @post.user_id %>
  <h2> <%= @post.suggestions.count %> Suggestions</h2>
  <%= render 'suggestions/suggestion', suggestions: @post.suggestions %>
  <%= link_to 'Edit', edit_post_path(@post) %> |
<% else %>
  <%= link_to 'Give Suggestion', edit_post_path(@post) %> <br><br>
<% end %>

<%= link_to 'Back', posts_path %>
