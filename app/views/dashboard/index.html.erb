<h1>Recent posts</h1>
<% unless @posts.empty? %>
  <table>
    <tr>
      <th>User_id</th>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>

    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to 'Show', post_path(post) %></td>
      </tr>
    <% end %>
  </table>
<% end %>
