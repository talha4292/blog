<%= tinymce %>
<h1>Suggestion</h1>

<%= form_with(model: [ @post, @post.suggestions.build ], local: true) do |form| %>

  <%= render 'shared/form_errors', object: form.object %>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text, required: true, value: @post.text, :class => "tinymce", :rows => 20, :cols => 120 %>
  </p>
    <%= form.hidden_field 'post_id', value: @post.id %>
  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Back', :back %>
