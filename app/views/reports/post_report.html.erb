<h1>Reported Posts</h1>
<div class="container-fluid">
  <% @reports.each do |report| %>
    <% post = report.reportable %>
    <% if post.approved? %>
      <% user = post.user %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <%= image_tag user.image_url, size: 25, class: "rounded-circle"  if user.image %>
            <%= image_tag "dp-avatar", size: 25, class: "rounded-circle"  unless user.image %>
            <small><%= user.username %></small>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
          </div>
          <div class="card-footer">
            <% report_user = report.user %>
            Reported by
            <%= image_tag report_user.image_url, size: 25, class: "rounded-circle"  if report_user.image %>
            <%= image_tag "dp-avatar", size: 25, class: "rounded-circle"  unless report_user.image %>
            <small><%= report_user.username %></small>
          </div>
          <%= link_to '', post_path(post), class: "stretched-link" %>
        </div>
        <%= link_to 'Un-publish', report_status_report_path(post),
                    method: :post %>
        <%= link_to 'Delete', post_path(post),
                    method: :delete,
                    data: { confirm: 'Are you sure?' } %>
      </div><br>
    <% end %>
  <% end %>
</div>
