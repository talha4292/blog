<h1>Reported Comments</h1>
<div class="container-fluid">
  <% @reports.each do |report| %>
    <% comment = report.reportable %>
    <% user = comment.user %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <%= image_tag user.image_url, size: 25, class: "rounded-circle"  if user.image %>
          <%= image_tag "dp-avatar", size: 25, class: "rounded-circle"  unless user.image %>
          <small><%= user.username %></small>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= comment.text %></h5>
        </div>
        <div class="card-footer">
          <% report_user = report.user %>
          Reported by
          <%= image_tag report_user.image_url, size: 25, class: "rounded-circle"  if report_user.image %>
          <%= image_tag "dp-avatar", size: 25, class: "rounded-circle"  unless report_user.image %>
          <small><%= report_user.username %></small>
        </div>
        <%= link_to '', view_comment_path(comment), class: "stretched-link" %>
      </div>
      <%= link_to 'Delete', comment_path(comment),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
    </div><br>
  <% end %>
</div>
