<div class="container-fluid">
  <% @comments.each do |comment| %>
    <% user = comment.user %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <%= image_tag user.image_url, size: 25, class: "rounded-circle"  if user.image %>
          <%= image_tag "dp-avatar.jpg", size: 25, class: "rounded-circle"  unless user.image %>
          <small><%= user.username %></small> commented on a <%= comment.commentable.class %> by
          <% user = comment.commentable.user %>
          <%= image_tag user.image_url, size: 25, class: "rounded-circle"  if user.image %>
          <%= image_tag "dp-avatar.jpg", size: 25, class: "rounded-circle"  unless user.image %>
          <small><%= user.username %></small>
        </div>
        <div class="card-body">
          <%= simple_format(comment.text) %>
        </div>
        <%= link_to '', polymorphic_path(comment.commentable), class: "stretched-link" %>
      </div>
    </div><br>
  <% end %>
</div>
