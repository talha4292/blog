<div class="container-fluid">
  <% @likes.each do |like| %>
    <% user = like.user %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <%= image_tag user.image_url, size: 25, class: "rounded-circle"  if user.image %>
          <%= image_tag "dp-avatar.jpg", size: 25, class: "rounded-circle"  unless user.image %>
          <small><%= user.username %></small> liked a <%= like.likeable.class %> by
          <% user = like.likeable.user %>
          <%= image_tag user.image_url, size: 25, class: "rounded-circle"  if user.image %>
          <%= image_tag "dp-avatar.jpg", size: 25, class: "rounded-circle"  unless user.image %>
          <small><%= user.username %></small>
        </div>
        <%= link_to '', polymorphic_path(like.likeable), class: "stretched-link" %>
      </div>
    </div><br>
  <% end %>
</div>
