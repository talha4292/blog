<% user = comment.user %>

<%= image_tag user.image_url, size: 50, class: "rounded-circle" if user.image %>
<%= image_tag "dp-avatar.jpg", size: 50, class: "rounded-circle" unless user.image %>
<b><%= user.username %></b><br><br>

<%= simple_format(comment.text) %>
<%= image_tag comment.image_url, size: 200 if comment.image %><br>

<span class="<%= comment.class %>-like-button-<%= comment.id %>">
  <%= comment_like_button(comment) %>
</span>

<%= render 'shared/report_button', object: comment, controller: 'comments' %>

<p>
  <%= link_to 'Destroy Comment', comment,
              method: :delete, remote: true,
              data: { confirm: 'Are you sure?' } if policy(comment).destroy? %>
</p>

<div class="reply-margin">
  <%= comment_reply(comment) %>
</div>
<hr>
